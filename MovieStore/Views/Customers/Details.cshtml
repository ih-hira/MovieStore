@model MovieStore.Models.Customer

@{
	ViewBag.Title = "Details";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<h3>@Model.Name</h3>
<ul>
	<li>Membership Type: <span>@Model.MembershipType.Name</span></li>
	
	@if (Model.BirthDate != null)
	{
		<li><p>Birth Date: <span>@Model.BirthDate.Value.ToString("dd MMM yyyy")</span></p></li>
	}
</ul>
