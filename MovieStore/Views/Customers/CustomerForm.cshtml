@model MovieStore.View_Models.CustomerFormViewModel
@{
	ViewBag.Title = "NewCustomer";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@*this line creates <form> opening tag*@
@using (Html.BeginForm("Save", "Customers"))
{
	<div class="form-group">
		@Html.LabelFor(m => m.Customer.Name)
		@Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })
	</div>

	<div class="form-group">
		@Html.LabelFor(m => m.Customer.BirthDate)
		@Html.TextBoxFor(m => m.Customer.BirthDate, "{0: dd MMM yyyy}", new { @class = "form-control" })
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Customer.MembershipTypeId)
		@Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select Membership Type", new { @class = "form-control" })
	</div>
	<div class="checkbox">
		<label>
			@Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsletter) Subscribed to Newsletter ?
		</label>
	</div>
	@Html.HiddenFor(m => m.Customer.Id)
	<button type="submit" class="btn btn-primary">Save</button>
}
@*this second } creates </form> opening tag if we use using method*@

